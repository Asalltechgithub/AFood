@model WebShop.Backoffice.Entities.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeUsuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeUsuario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        <dd class="col-sm-10 text-center">

            <h3> Lista de Endereços</h3>

            <table class="table-striped text-center border-dark">
                <thead>
                    <tr>
                        <th cellspacing="10">Nome da Rua </th>
                        <th cellspacing="10">Complmento</th>
                        <th>CEP </th>
                        <th>Cidade </th>
                        <th>Estado </th>
                        <th>Ações </th>
                    </tr>
                </thead>
                <tbody>


                        @foreach (var item in Model.Endereco)
                        {
                        <tr>
                            <td>
                                    @item.NomeRua
                            </td>
                            <td>
                                    @item.Complemento
                            </td>
                            <td>
                                    @item.CEP
                            </td>
                            <td>
                                    @item.Cidade
                            </td>
                            <td>
                                    @item.Estado
                            </td>
                            <td>
                                <a class="btn btn-info"asp-action="" asp-route-id="#">Add</a> |
                                <a class="btn btn-success"asp-action="" asp-route-id="#">Atualizar</a> |
                                <a class="btn btn-danger"asp-action="" asp-route-id="#">Delete</a>
                            </td>
                        </tr>
                        }

                </tbody>

            </table>
        </dd>
        </dd>
    </dl>





</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
