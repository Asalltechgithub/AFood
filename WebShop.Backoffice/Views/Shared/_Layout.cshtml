 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebShop.Backoffice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebShop.Backoffice.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" asp-append-version="true" />
</head>

<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <div class="header_img"> <img src="https://i.imgur.com/hczKIze.jpg" alt=""> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo"><img src="/Imagems/Logo/Logo.png" width="100px" style="padding-right:50%" /> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">BackOffice AS Food</span> </a>
                <div class="nav_list">
                    <a asp-controller="Home" class="nav_link active">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Dashboard</span>
                    </a>
                    <a asp-controller="Usuario" class="nav_link">  <i class='bx bx-user nav_icon'></i> <span class="nav_name">Users</span> </a>
                    <a asp-controller="Produtos" class="nav_link">  <i class='bx bx-message-square-detail nav_icon'></i> <span class="nav_name">Produtos</span> </a>
                    <a asp-controller="Categorias" class="nav_link"> <i class='bx bx-bookmark nav_icon'></i> <span class="nav_name">Categorias</span> </a>
                    <a asp-controller="#" class="nav_link"> <i class='bx bx-folder nav_icon'></i> <span class="nav_name">Finanças</span> </a>
                    <a asp-controller="#" class="nav_link"><i class='bx bx-bar-chart-alt-2 nav_icon'></i> <span class="nav_name">Manager</span> </a>

                </div>
            </div>
            <a asp-controller="Login" asp-action="Sair" class="nav_link"> <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span> </a>
        </nav>
    </div>
    <!--Container Main start-->
    <div class="height-100 bg-light">
        
        <div class="container">
            <main role="main" class="pb-3">
                <br /> <br /> <br /> <br />
                @RenderBody()
            </main>
        </div>
    </div>
    <!--Container Main end-->


    <footer class="border-bottom footer text-muted ">
        <div class="container text-center">
            &copy; 2023 - ASALLTECH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
